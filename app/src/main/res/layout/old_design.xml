<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchNotification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_search_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:hint="Search Notification">

            <AutoCompleteTextView
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:paddingLeft="5dp"
                android:layout_height="50dp"
                android:completionThreshold="1"
                >
            </AutoCompleteTextView>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_self_info"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorAccent"
            android:text="Details of notification"
            ></TextView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                tools:ignore="MissingConstraints">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attached Properties"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryDark"
                    ></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:padding="0dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorPrimaryDark"
                    >
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:id="@+id/btn_house"
                        android:drawableLeft="@drawable/home"
                        android:text="Houses"
                        android:layout_weight="6"
                        android:background="@color/colorPrimaryDark"
                        ></Button>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="60dp"
                        android:text="100/10"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        ></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:padding="0dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorPrimaryDark"
                    >

                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="60dp"
                        android:id="@+id/btn_shop"
                        android:drawableLeft="@drawable/shop"
                        android:text="Shops"
                        android:background="@color/colorPrimaryDark"
                        ></Button>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="60dp"
                        android:text="100/10"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        ></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:padding="0dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorPrimaryDark"
                    >

                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:background="@color/colorPrimaryDark"
                        android:layout_height="60dp"
                        android:id="@+id/btn_agri_land"
                        android:drawableLeft="@drawable/corn"
                        android:text="Cultivable Land"
                        ></Button>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="60dp"
                        android:text="100/10"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        ></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:padding="0dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorPrimaryDark"
                    >

                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:background="@color/colorPrimaryDark"
                        android:layout_height="60dp"
                        android:id="@+id/btn_barren_land"
                        android:drawableLeft="@drawable/drought"
                        android:text="Barren Land"
                        ></Button>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="60dp"
                        android:text="100/10"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        ></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:padding="0dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorPrimaryDark"
                    >

                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:background="@color/colorPrimaryDark"
                        android:layout_height="60dp"
                        android:id="@+id/btn_shrine"
                        android:drawableLeft="@drawable/shrine"
                        android:text="Shrine"
                        ></Button>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="60dp"
                        android:text="100/10"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        ></TextView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:padding="0dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorPrimaryDark"
                    >

                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:background="@color/colorPrimaryDark"
                        android:layout_height="60dp"
                        android:id="@+id/btn_mosque"
                        android:drawableLeft="@drawable/mosque"
                        android:text="Mosques"
                        ></Button>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="60dp"
                        android:text="100/10"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        ></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:padding="0dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorPrimaryDark"
                    >

                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:background="@color/colorPrimaryDark"
                        android:layout_height="60dp"
                        android:id="@+id/btn_schools"
                        android:drawableLeft="@drawable/schools"
                        android:text="Schools"
                        ></Button>



                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="60dp"
                        android:text="100/10"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        ></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:padding="0dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorPrimaryDark"
                    >

                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:background="@color/colorPrimaryDark"
                        android:layout_height="60dp"
                        android:id="@+id/btn_dispensary"
                        android:drawableLeft="@drawable/pharmacy"
                        android:text="Dispensaries"
                        ></Button>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="60dp"
                        android:text="100/10"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        ></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:padding="0dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorPrimaryDark"
                    >

                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:background="@color/colorPrimaryDark"
                        android:layout_height="60dp"
                        android:id="@+id/btn_hospital"
                        android:drawableLeft="@drawable/hospital"
                        android:text="Hospitals"
                        ></Button>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="60dp"
                        android:text="100/10"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        ></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:padding="0dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorPrimaryDark"
                    >

                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:background="@color/colorPrimaryDark"
                        android:layout_height="60dp"
                        android:id="@+id/btn_madaris"
                        android:drawableLeft="@drawable/madrisa"
                        android:text="Madrisas"
                        ></Button>



                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="60dp"
                        android:text="100/10"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        ></TextView>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>