<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SearchNotification">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                tools:ignore="MissingConstraints">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/btn_shrine"
                    android:drawableLeft="@drawable/shrine"
                    android:text="Shrine"
                    android:backgroundTint="@color/colorPrimaryDark"
                    ></androidx.appcompat.widget.AppCompatButton>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/btn_mosque"
                    android:drawableLeft="@drawable/mosque"
                    android:text="Mosque"
                    android:backgroundTint="@color/colorPrimaryDark"
                    ></androidx.appcompat.widget.AppCompatButton>


                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/btn_imam_bargah"
                    android:drawableLeft="@drawable/mosque"
                    android:text="Imambargah"
                    android:backgroundTint="@color/colorPrimaryDark"
                    ></androidx.appcompat.widget.AppCompatButton>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/btn_house"
                    android:drawableLeft="@drawable/home"
                    android:text="Houses"
                    android:layout_marginTop="15dp"
                    android:layout_weight="6"
                    android:backgroundTint="@color/colorPrimaryDark"
                    ></androidx.appcompat.widget.AppCompatButton>



                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/btn_shop"
                    android:drawableLeft="@drawable/shop"
                    android:text="Shops"
                    android:backgroundTint="@color/colorPrimaryDark"
                    ></androidx.appcompat.widget.AppCompatButton>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/btn_agri_land"
                    android:drawableLeft="@drawable/corn"
                    android:text="Cultivable Land"
                    android:backgroundTint="@color/colorPrimaryDark"
                    ></androidx.appcompat.widget.AppCompatButton>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/btn_barren_land"
                    android:drawableLeft="@drawable/drought"
                    android:text="Barren Land"
                    android:backgroundTint="@color/colorPrimaryDark"
                    ></androidx.appcompat.widget.AppCompatButton>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/btn_schools"
                    android:drawableLeft="@drawable/schools"
                    android:text="Schools"
                    android:backgroundTint="@color/colorPrimaryDark"
                    ></androidx.appcompat.widget.AppCompatButton>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/btn_dispensary"
                    android:drawableLeft="@drawable/pharmacy"
                    android:text="Dispensaries"
                    android:backgroundTint="@color/colorPrimaryDark"
                    ></androidx.appcompat.widget.AppCompatButton>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/btn_hospital"
                    android:drawableLeft="@drawable/hospital"
                    android:text="Hospitals"
                    android:backgroundTint="@color/colorPrimaryDark"
                    ></androidx.appcompat.widget.AppCompatButton>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/btn_madaris"
                    android:drawableLeft="@drawable/madrisa"
                    android:text="Madrisas"
                    android:backgroundTint="@color/colorPrimaryDark"
                    ></androidx.appcompat.widget.AppCompatButton>

            </LinearLayout>
        </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>