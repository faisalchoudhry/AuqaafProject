<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:descendantFocusability="beforeDescendants"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <View
        android:id="@+id/snackbarView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="#fff">

        <LinearLayout
            android:id="@+id/surveyForm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="363dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img_part1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/ic_report_board" />

                    <TextView
                        android:id="@+id/tv_mainHeading_part1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_toEndOf="@+id/img_part1"
                        android:layout_toRightOf="@+id/img_part1"
                        android:gravity="center|center_vertical"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:orientation="vertical">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/spinnerWaqfPropertyNameShopForm"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@android:drawable/btn_dropdown"
                        android:minHeight="55dp"
                        android:tag="waqfPropertyNameShopForm"
                        tools:ignore="MissingClass" />

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/spinnerNotificationNoShopForm"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@android:drawable/btn_dropdown"
                        android:minHeight="55dp"
                        android:tag="notificationNoShopForm"
                        tools:ignore="MissingClass" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_waqf_prop_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:focusableInTouchMode="false"
                        android:hint="Lessee Name"
                        android:longClickable="false"
                        android:tag="lessee_name">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_lessee_name_shop_form"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:longClickable="false"
                            android:tag="lessee_name_shop_form"
                            android:textColor="#000"
                            android:textSize="16sp"></com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_lessee_f_name_shop_form"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:focusableInTouchMode="false"
                        android:hint="Lessee Father Name"
                        android:longClickable="false"
                        android:tag="lessee_f_name_shop_form">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_lessee_f_name_shop_form"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:longClickable="false"
                            android:tag="lessee_f_name_shop_form"
                            android:textColor="#000"
                            android:textSize="16sp"></com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_lessee_address_shop_form"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:focusableInTouchMode="false"
                        android:hint="Lessee Address"
                        android:longClickable="false"
                        android:tag="lessee_address_shop_form">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_lessee_address_shop_form"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:longClickable="false"
                            android:tag="lessee_address_shop_form"
                            android:textColor="#000"
                            android:textSize="16sp"></com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_land_seq_name_shop_form"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:focusableInTouchMode="false"
                        android:hint="Land Sequence"
                        android:longClickable="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_land_seq_name_shop_form"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:longClickable="false"
                            android:tag="land_seq_name_shop_form"
                            android:textColor="#000"
                            android:textSize="16sp"></com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_area_shop_form"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:focusableInTouchMode="false"
                        android:hint="Area (M.F)"
                        android:longClickable="false"
                        android:tag="area_m_p_shop_form">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_area_shop_form"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:longClickable="false"
                            android:tag="area_m_p_shop_form"
                            android:textColor="#000"
                            android:textSize="16sp"></com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="5dp"
                        android:text="Lease Start Date"
                        android:textColor="#5D4037" />

                    <TextView
                        android:id="@+id/lease_start_date_shop_form"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:background="#d4d4d4"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:tag="lease_start_date_shop_form"
                        android:text="Select Lease Start Date"
                        android:textColor="#090"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="5dp"
                        android:text="Lease End Date"
                        android:textColor="#5D4037" />

                    <TextView
                        android:id="@+id/lease_end_date_shop_form"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:background="#d4d4d4"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:tag="lease_end_date_shop_form"
                        android:text="Select End Start Date"
                        android:textColor="#090"
                        android:textSize="18sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_remarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:hint="Surveyor Remarks"
                        android:tag="surveyor_remarks_shop_form">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_remarks_shop_form"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:tag="surveyor_remarks_shop_form"
                            android:textColor="#000"
                            android:textSize="16sp"></com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center"
                            android:text="Shop Picture"
                            android:textColor="@color/textColorPrimary"></TextView>

                        <ImageView
                            android:id="@+id/image_shop_shop_form"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/camera1"
                            android:tag="shop_shop_form" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Lessee Picture"
                            android:textColor="@color/textColorPrimary"></TextView>

                        <ImageView
                            android:id="@+id/image_lessee_shop_form"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/camera1"
                            android:tag="lessee_shop_form" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center"
                            android:text="Lease Picture"
                            android:textColor="@color/textColorPrimary"></TextView>

                        <ImageView
                            android:id="@+id/image_lease_shop_form"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/camera1"
                            android:tag="lease_shop_form" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center"
                            android:text="Other Picture"
                            android:textColor="@color/textColorPrimary"></TextView>

                        <ImageView
                            android:id="@+id/image_other_shop_form"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/camera1"
                            android:tag="other_shop_form" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingBottom="50dp">

                <Button
                    android:id="@+id/sendSave"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/menu_item_backgrounds"
                    android:text="Save Data"
                    android:textColor="@drawable/text_color_change"
                    android:textSize="21sp" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>